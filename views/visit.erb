<h2>Записаться</h2>
<p>Запишитесь к нам в Barber Shop</p>

<form action="/visit" method="POST">
  <div class="mb-3">
    <label>Ваше имя</label>
    <input id="aaa" name="username" type="text" class="form-control" placeholder="Введите имя" value="<%= @username %> ">
  </div>
  <div class="mb-3">
    <label>Ваш телефон</label>
    <input id="bbb" name="phone" type="text" class="form-control" placeholder="Введите телефон" value="<%= @phone %>">
  </div>
</br> 

<select name="barber" type="text" class="form-select" aria-label="Default select example">
  <option selected>Выберите парикмахера</option>
  <% @barbers.each do |row| %>
  <option <%= @barber == row['name'] ? 'selected' : '' %>><%= row['name']%></option>
  <% end %>  
</select>

<div class="mb-3">
    <label>Дата и время</label>
    <input id="datetimepicker" name="datetime" type="text" class="form-control ccc" placeholder="Выберите дату и время" value="<%= @datetime %>">
  </div>
 </br> 
<div class="mb-3">
    <label>Выбрать цвет краски: </label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>   
</div>

  </br> 
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

